---
// Feature Cards grid Section
// ------------
// Description: A grid of cards with feature information in a 4 column layout.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Card from '../../ui/cards/FeatureCard.astro'

// Content
// - Cards
import feature01 from '../../../assets/cards/integrations.png'
import feature02 from '../../../assets/cards/job-running.png'
import feature03 from '../../../assets/cards/job-map.png'
import feature04 from '../../../assets/cards/job-search.png'
import feature05 from '../../../assets/cards/job-results.png'
---

<Section id="features">
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-pretty">Add jobs to your site. <strong>Zero code needed.</strong></h2>
			<p class="pb-0 text-lg">
				Get fresh job listings on your website automatically. Works with WordPress, Webflow, or any other platform you use.
			</p>
		</Col>
	</Row>
	<Row>
		<Col span="4">
			<Card
				title="Works with your website"
				subtitle="Ready-made integrations for WordPress, Webflow, Wix, Squarespace, Bubble, and more. Just plug and play."
				image={feature01}
				link="/features"
			/>
		</Col>
		<Col span="4">
			<Card
				title="Automate everything"
				subtitle="Schedule daily or weekly job updates. Connect with Zapier to send jobs anywhere - your CRM, email, or Slack."
				image={feature02}
				link="/features"
			/>
		</Col>
		<Col span="4">
			<Card
				title="Target exact locations"
				subtitle="Get jobs from specific cities, regions, or countries. Use our map tool to set your target areas."
				image={feature03}
				link="/features"
			/>
		</Col>
	</Row>
	<Row classes="mt-6">
		<Col span="6">
			<Card
				title="Advanced job filtering"
				subtitle="Filter by salary range, job type, or keywords. Only get the jobs that match your site's focus."
				image={feature04}
				link="/features"
			/>
		</Col>
		<Col span="6">
			<Card
				title="Clean, formatted data"
				subtitle="Every job comes with a clean title, description, and company details. No messy data or duplicates."
				image={feature05}
				link="/features"
			/>
		</Col>
	</Row>
</Section>
