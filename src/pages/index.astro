---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/HomeCTA.astro'
import Features from '../components/blocks/features/FeatureCards.astro'
import Testimonial from '../components/blocks/testimonials/BasicDark.astro'
import HighlightContent from '../components/blocks/highlights/HighlightContent.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Content
// - Testimonial background
import testimonialBackground from '../assets/testimonial-bg-01.webp'
import HowItWorks from '../components/blocks/highlights/HowItWorks.astro'
// - SEO
const SEO = {
	title: 'The #1 Job Data Backfiller | Roozna',
	description: 'Get fresh job data for your job board or HR platform. Schedule automated job scraping, access via API, or export in bulk. No coding needed.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero />
	<Features />
	<Testimonial bg={testimonialBackground} bgPosition="right" />
	<HighlightContent />
	<HowItWorks />
	<CTA />
</Layout>
